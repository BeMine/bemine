<%= form_for @product, :url => product_path(@product), :method => :patch do |f| %>

<%= f.label :name, "Product Name"%>
<div class= "form group">
 <%= f.text_field :name%>
</div>


 <%= f.label :description, "Product Description"%>
<div class= "form group">
 <%= f.text_area :description%>
</div>


 <%= f.label :location, "Product Location"%>
<div class= "form group"> 
 <%= f.text_field :location%>
</div>


 <%= f.label :price, "Price"%>
<div class= "form group"> 
 <%= f.text_field :price%>
</div>

<div class= "form group">
 <%= f.submit "送出", :class => "btn btn-warning"%>
</div>


<% end %>